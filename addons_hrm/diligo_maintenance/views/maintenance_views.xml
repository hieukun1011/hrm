                                        <t t-esc="record.todo_request_count.value"/>
                                    </div>
                                    <div class="col-9">
                                        <a name="%(hr_equipment_todo_request_action_from_dashboard)d" type="action"
                                           context="{'search_default_kanban_request': 1}">
                                            Tổng được giao
                                        </a>
                                    </div>
                                    <div class="col-3">
                                        <t t-esc="record.todo_request_count_date.value"/>
                                    </div>
                                    <div class="col-9">
                                        <a name="%(hr_equipment_todo_request_action_from_dashboard)d" type="action"
                                           context="{'search_default_kanban_state_block': 1}">
                                            Đã Hoàn Thành
                                        </a>
                                    </div>
                                    <div class="col-3">
                                        <t t-esc="record.todo_request_count_block.value"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


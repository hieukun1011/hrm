        <field name="view_mode">tree,kanban</field>
        <field name="context">{'search_default_maintenance_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Thêm một yêu cầu bảo trì mới
